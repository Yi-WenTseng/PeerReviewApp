<%- include('bootheader') -%>
<%- include('menubar') -%>
    <div class="jumbotron">
        <h1><%= courseInfo.name %></h1>
    </div>


    <% if (user._id.equals(courseInfo.ownerId)) { %>
        You own this course<br>
        <form method="post" action="/saveProblemSet/<%= courseInfo._id %>">
            Problem Set Name: <input type="text" name="name"><br>
            <input class="btn btn-primary" type="submit" value="Save">
        </form>
    <% } else { %>
        You are a student in this course and may not add problem sets.
    <%} %>


<%- include('bootfooter') -%>
